<div class="container">
<section class="edit-link">
<br>

  <div class="row">
      <%= form_for @link do |f| %>
        <%= render "shared/errors", object: @link %>

        <div class="form-group">
          <%= f.text_field :title, required: true, class: "form-control", placeholder: "title" %>
        </div>

        <div class="form-group">
          <%= f.url_field :url, class: "form-control", placeholder: "url" %>
        </div>

        <div class="form-group">
          <%= f.url_field :author, class: "form-control", placeholder: "author" %>
        </div>

        <div class="form-group">
          <%= f.url_field :image, class: "form-control", placeholder: "image url" %>
        </div>

        <div class="form-group">
          <%= f.text_area :description, class: "form-control", placeholder: "description", rows: 15 %>
        </div>
      
        <div class="form-group">
          <%= f.label :tag_list, 'Tags (separated with comas)' %>
          <%= f.text_field :tag_list, value: f.object.tag_list.to_s, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.button :submit, class: "btn btn-success" %>
        </div>

      <% end %>
    </div>
  </div>
</section>
</div>